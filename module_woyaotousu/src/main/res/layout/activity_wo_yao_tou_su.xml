<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WoYaoTouSuActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tousu_hint_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="*姓名："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>


                <EditText
                    android:id="@+id/etv_tousu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*姓名："
                    android:maxLength="100"
                    android:maxLines="3"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tousu_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:text="*身份证："
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/colorHintName"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/qmui_config_color_red"
                        android:visibility="invisible"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etv_tousu_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*身份证："
                    android:maxLength="18"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tousu_hint_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:text="*手机号码："
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/colorHintName"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_warning_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/qmui_config_color_red"
                        android:visibility="invisible"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etv_tousu_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*手机号码："
                    android:inputType="number"
                    android:maxLength="13"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tousu_hint_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="投诉标题："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>


                <EditText
                    android:id="@+id/etv_tousu_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="投诉标题："
                    android:maxLength="100"
                    android:maxLines="3"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tousu_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tousu_hint_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="投诉单位："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_tousu_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:drawableRight="@drawable/ic_tousu_title"
                    android:paddingRight="15dp"
                    android:hint="投诉单位："
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:paddingBottom="24dp"
                        android:paddingTop="24dp"
                        android:text="是否公开："
                        android:textColor="@color/colorHintName"
                        android:textSize="14sp" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/sb_is_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:checked="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        app:kswAnimationDuration="300"
                        app:kswBackDrawable="@drawable/bg_ios_switch_button"
                        app:kswTextAdjust="-5dp"
                        app:kswTextOn="on"
                        app:kswThumbDrawable="@drawable/ios_thumb_selector"
                        app:kswThumbMarginBottom="-8.0dp"
                        app:kswThumbMarginLeft="-3.5dp"
                        app:kswThumbMarginRight="-5dp"
                        app:kswThumbMarginTop="-2.0dp"
                        app:kswThumbRangeRatio="2.0" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tousu_hint_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:text="*图形验证码："
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/colorHintName"
                        android:visibility="invisible"/>


                    <EditText
                        android:id="@+id/etv_tousu_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:paddingBottom="15dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_text_cursor"
                        android:hint="*请输入图形验证码："
                        android:maxLength="100"
                        android:maxLines="3"
                        android:textSize="@dimen/text_tousu_edit_hint"
                        android:textColorHint="@color/colorHintName"
                        android:textColor="@color/colorTousuText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/colorBlank"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_verify_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="15dp"
                    android:background="#e5e7eb"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tousu_hint_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="*请您输入要投诉的内容："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/etv_tousu_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="63dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*请您输入要投诉的内容："
                    android:maxLength="100"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <TextView
                android:id="@+id/tv_tousu_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableRight="@drawable/ic_tousu_add_file"
                android:text="附件"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTousuText"
                android:clickable="true"
                android:focusable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorBlank"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#f7f8fa"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_tousu_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                app:stv_shaderStartColor="#4a6dd5"
                app:stv_shaderEndColor="#5698f0"
                app:stv_shaderEnable="true"
                app:stv_shaderMode="leftToRight"
                >
            </com.coorchice.library.SuperTextView>

        </LinearLayout>


</ScrollView>