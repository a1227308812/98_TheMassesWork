<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/btv_user"
            android:layout_width="79dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_18"
            android:textColor="#303545"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            app:arrowLocation="right"
            app:arrowPosition="@dimen/dp_15"
            app:bubbleColor="#7faaff"
            app:angle="3dp"/>
        
        <com.coorchice.library.SuperTextView
            android:id="@+id/picture_user"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_toRightOf="@id/btv_user"
            app:stv_state_drawable="@color/colorTousuText"
            app:stv_corner="@dimen/dp_20"
            app:stv_drawableAsBackground="true"/>

    </RelativeLayout>



</RelativeLayout>