<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LiuYanZiXunActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_zixun_hint_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="*姓名："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>


                <EditText
                    android:id="@+id/etv_zixun_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*姓名："
                    android:maxLength="100"
                    android:maxLines="3"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zixun_hint_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:text="*手机号码："
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/colorHintName"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_warning_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="@dimen/text_tousu_top_hint"
                        android:textColor="@color/qmui_config_color_red"
                        android:visibility="invisible"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etv_zixun_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*手机号码："
                    android:inputType="number"
                    android:maxLength="13"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <LinearLayout
                android:id="@+id/ll_zixun_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_zixun_hint_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="*资讯标题："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_zixun_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="15dp"
                    android:drawableRight="@drawable/ic_zixun_title"
                    android:paddingRight="15dp"
                    android:text="*资讯标题："
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColor="@color/colorHintName" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorBlank"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_zixun_hint_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:text="*请您输入要咨询的内容："
                    android:textSize="@dimen/text_tousu_top_hint"
                    android:textColor="@color/colorHintName"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/etv_zixun_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="63dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_text_cursor"
                    android:hint="*请您输入要咨询的内容："
                    android:maxLength="100"
                    android:textSize="@dimen/text_tousu_edit_hint"
                    android:textColorHint="@color/colorHintName"
                    android:textColor="@color/colorTousuText"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6f8"/>

            <TextView
                android:id="@+id/tv_zixun_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableRight="@drawable/ic_zixun_add_file"
                android:text="附件"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTousuText"
                android:clickable="true"
                android:focusable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorBlank"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:background="#f7f8fa"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/rl_tousu_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                app:stv_shaderStartColor="#4a6dd5"
                app:stv_shaderEndColor="#5698f0"
                app:stv_shaderEnable="true"
                app:stv_shaderMode="leftToRight">
            </com.coorchice.library.SuperTextView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>