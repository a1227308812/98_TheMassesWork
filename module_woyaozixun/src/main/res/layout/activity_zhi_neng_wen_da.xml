<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ZhiNengWenDaActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="563dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/etv_zixun_input"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:inputType="number"
            android:maxLines="1"
            android:background="@drawable/bg_zixun_edittext"
            android:textCursorDrawable="@drawable/color_text_cursor"/>
        
        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_zixun_send"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            app:stv_corner="@dimen/dp_15"
            android:text="发送"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            app:stv_shaderEnable="true"
            app:stv_shaderStartColor="#4a6dd5"
            app:stv_shaderEndColor="#5698f0"
            app:stv_shaderMode="leftToRight"/>

    </LinearLayout>

</RelativeLayout>