<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:text="4月30日 上午12:00"
        android:textSize="@dimen/sp_12"
        android:textColor="#b6c2d2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/tv_time">

        <com.coorchice.library.SuperTextView
            android:id="@+id/picture_robot"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:stv_state_drawable="@color/black"
            app:stv_drawableAsBackground="true"
            app:stv_corner="20dp"/>

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/btv_robot"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/picture_robot"
            android:layout_marginLeft="@dimen/dp_18"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_19"
            android:paddingBottom="@dimen/dp_19"
            android:textColor="#303545"
            android:textSize="@dimen/sp_14"
            app:angle="3dp"
            app:bubbleColor="#ffff"/>



    </RelativeLayout>




</RelativeLayout>