<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.LoginActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_25">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_top"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_180"
            android:background="@mipmap/png_dl_db"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/qiv_logo"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_140"
            android:background="@color/white"
            android:elevation="@dimen/dp_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_app" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:srcCompat="@drawable/arrow_down" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_grdl"
            android:layout_width="@dimen/dp_155"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:text="个人登录"
            android:textColor="#4a6dd5"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toStartOf="@id/tv_frdl"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qiv_logo" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_frdl"
            android:layout_width="@dimen/dp_155"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="法人登录"
            android:textColor="#4a6dd5"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_grdl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/tv_grdl"
            app:layout_constraintTop_toTopOf="@id/tv_grdl" />


        <LinearLayout
            android:id="@+id/ll_input_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_48"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grdl">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_yzm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layout_yzm_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_yzm_account"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_27"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/icon_dl_sj" />

                    <View
                        android:id="@+id/divider_vertical_yzm_account"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_18"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm_account"
                        app:layout_constraintStart_toEndOf="@id/iv_yzm_account"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm_account" />

                    <!--android.support.design:hintAnimationEnabled | 是否显示hint的动画,默认true-->
                    <!--android.support.design:hintEnabled | 是否使用hint属性,默认true-->
                    <!--android.support.design:hintTextAppearance | 设置hint的文字样式(指运行动画效果之后的样式)-->
                    <!--android.support.design:counterEnabled | 是否显示计数器-->
                    <!--android.support.design:counterMaxLength | 设置计数器的最大值-->
                    <!--android.support.design:counterOverflowTextAppearance | 输入字符大于我们限定个数字符时的样式-->
                    <!--app:theme 设置浮动标签的颜色主题-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_yzm_account"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        app:counterEnabled="false"
                        app:counterMaxLength="11"
                        app:counterOverflowTextAppearance="@style/ErrorAppearance"
                        app:counterTextAppearance="@style/OverAppearance"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/EditText_hintTextAppearance"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm_account"
                        app:layout_constraintEnd_toEndOf="@id/layout_yzm_account"
                        app:layout_constraintStart_toEndOf="@id/divider_vertical_yzm_account"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm_account">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_yzm_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入用户名"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="a"
                            android:textColor="#303545"
                            android:textColorHint="#dadfe5"
                            android:textSize="@dimen/text_14" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:id="@+id/divider_horizontal_yzm_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm_account"
                        app:layout_constraintTop_toBottomOf="@id/textInputLayout_yzm_account" />


                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layout_yzm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:minHeight="@dimen/dp_50"
                    app:layout_constraintEnd_toEndOf="@id/layout_yzm_account"
                    app:layout_constraintStart_toStartOf="@id/layout_yzm_account"
                    app:layout_constraintTop_toBottomOf="@id/layout_yzm_account">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_password"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_27"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm"
                        app:layout_constraintStart_toStartOf="@id/layout_yzm"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm"
                        app:srcCompat="@mipmap/icon_dl_dx" />

                    <View
                        android:id="@+id/divider_vertical_psw"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_18"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm"
                        app:layout_constraintStart_toEndOf="@id/iv_password"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm" />


                    <!--android.support.design:passwordToggleEnabled | 是否显示密码开关图片,需要EditText设置inputType-->
                    <!--android.support.design:passwordToggleTint | 设置密码开关图片颜色-->
                    <!--android.support.design:passwordToggleTintMode | 设置密码开关图片(混合颜色模式),与passwordToggleTint同时使用-->
                    <!--android.support.design:errorEnabled |是否显示错误信息-->
                    <!--android.support.design:errorTextAppearance| 错误信息的字体样式-->


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_yzm"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_8"
                        app:counterEnabled="false"
                        app:counterMaxLength="12"
                        app:counterOverflowTextAppearance="@style/ErrorAppearance"
                        app:counterTextAppearance="@style/OverAppearance"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/EditText_hintTextAppearance"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm"
                        app:layout_constraintEnd_toStartOf="@id/btn_yzm"
                        app:layout_constraintStart_toEndOf="@id/divider_vertical_psw"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_yzm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:text="a"
                            android:textColor="#303545"
                            android:textColorHint="#dadfe5"
                            android:textSize="@dimen/text_14" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/btn_yzm"
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/selector_yzm_change_phone"
                        android:elevation="@dimen/dp_3"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm"
                        app:layout_constraintEnd_toEndOf="@id/layout_yzm"
                        app:layout_constraintStart_toEndOf="@id/textInputLayout_yzm"
                        app:layout_constraintTop_toTopOf="@id/layout_yzm" />

                    <View
                        android:id="@+id/divider_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_yzm"
                        app:layout_constraintTop_toBottomOf="@id/textInputLayout_yzm" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layout_pwd_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_pwd_account"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_27"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/icon_dl_sj" />

                    <View
                        android:id="@+id/divider_vertical_pwd_account"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_18"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_pwd_account"
                        app:layout_constraintStart_toEndOf="@id/iv_pwd_account"
                        app:layout_constraintTop_toTopOf="@id/layout_pwd_account" />

                    <!--android.support.design:hintAnimationEnabled | 是否显示hint的动画,默认true-->
                    <!--android.support.design:hintEnabled | 是否使用hint属性,默认true-->
                    <!--android.support.design:hintTextAppearance | 设置hint的文字样式(指运行动画效果之后的样式)-->
                    <!--android.support.design:counterEnabled | 是否显示计数器-->
                    <!--android.support.design:counterMaxLength | 设置计数器的最大值-->
                    <!--android.support.design:counterOverflowTextAppearance | 输入字符大于我们限定个数字符时的样式-->
                    <!--app:theme 设置浮动标签的颜色主题-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_pwd_account"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        app:counterEnabled="false"
                        app:counterMaxLength="11"
                        app:counterOverflowTextAppearance="@style/ErrorAppearance"
                        app:counterTextAppearance="@style/OverAppearance"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/EditText_hintTextAppearance"
                        app:layout_constraintBottom_toBottomOf="@id/layout_pwd_account"
                        app:layout_constraintEnd_toEndOf="@id/layout_pwd_account"
                        app:layout_constraintStart_toEndOf="@id/divider_vertical_pwd_account"
                        app:layout_constraintTop_toTopOf="@id/layout_pwd_account">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_pwd_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入用户名"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="a"
                            android:textColor="#303545"
                            android:textColorHint="#dadfe5"
                            android:textSize="@dimen/text_14" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:id="@+id/divider_horizontal_pwd_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/layout_pwd_account"
                        app:layout_constraintTop_toBottomOf="@id/textInputLayout_pwd_account" />


                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/pwd_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:minHeight="@dimen/dp_50"
                    app:layout_constraintEnd_toEndOf="@id/layout_pwd_account"
                    app:layout_constraintStart_toStartOf="@id/layout_pwd_account"
                    app:layout_constraintTop_toBottomOf="@id/layout_pwd_account">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_pwd_password"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_27"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="@id/pwd_layout"
                        app:layout_constraintStart_toStartOf="@id/pwd_layout"
                        app:layout_constraintTop_toTopOf="@id/pwd_layout"
                        app:srcCompat="@mipmap/icon_dl_dx" />

                    <View
                        android:id="@+id/divider_vertical_pwd_psw"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_18"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/pwd_layout"
                        app:layout_constraintStart_toEndOf="@id/iv_pwd_password"
                        app:layout_constraintTop_toTopOf="@id/pwd_layout" />


                    <!--android.support.design:passwordToggleEnabled | 是否显示密码开关图片,需要EditText设置inputType-->
                    <!--android.support.design:passwordToggleTint | 设置密码开关图片颜色-->
                    <!--android.support.design:passwordToggleTintMode | 设置密码开关图片(混合颜色模式),与passwordToggleTint同时使用-->
                    <!--android.support.design:errorEnabled |是否显示错误信息-->
                    <!--android.support.design:errorTextAppearance| 错误信息的字体样式-->


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_pwd_password"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_8"
                        app:counterEnabled="false"
                        app:counterMaxLength="12"
                        app:counterOverflowTextAppearance="@style/ErrorAppearance"
                        app:counterTextAppearance="@style/OverAppearance"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/EditText_hintTextAppearance"
                        app:layout_constraintBottom_toBottomOf="@id/pwd_layout"
                        app:layout_constraintEnd_toEndOf="@id/pwd_layout"
                        app:layout_constraintStart_toEndOf="@id/divider_vertical_pwd_psw"
                        app:layout_constraintTop_toTopOf="@id/pwd_layout">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_pwd_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入密码"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:text="a"
                            android:textColor="#303545"
                            android:textColorHint="#dadfe5"
                            android:textSize="@dimen/text_14" />
                    </android.support.design.widget.TextInputLayout>


                    <View
                        android:id="@+id/divider_pwd_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6"
                        app:layout_constraintBottom_toBottomOf="@id/pwd_layout"
                        app:layout_constraintTop_toBottomOf="@id/textInputLayout_pwd_password" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_yzm_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="短信验证码登录"
            android:textColor="#4a6dd5"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="@id/ll_input_content"
            app:layout_constraintTop_toBottomOf="@id/ll_input_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/login_submit"
            android:elevation="@dimen/dp_6"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="@id/ll_input_content"
            app:layout_constraintStart_toStartOf="@id/ll_input_content"
            app:layout_constraintTop_toBottomOf="@id/tv_yzm_submit" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:text="忘记密码？"
            android:textColor="#4a6dd5"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="@id/btn_login_submit"
            app:layout_constraintTop_toBottomOf="@id/btn_login_submit" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_zczh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="注册账号"
            android:textColor="#4a6dd5"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="@id/btn_login_submit"
            app:layout_constraintTop_toTopOf="@id/tv_wjmm" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_other_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:text="第三方登录"
            android:textColor="#828899"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wjmm" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toBottomOf="@id/tv_other_space"
            app:layout_constraintEnd_toStartOf="@id/tv_other_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_other_space" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toBottomOf="@id/tv_other_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_other_space"
            app:layout_constraintTop_toTopOf="@id/tv_other_space" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_wxdl"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@color/white"
            android:elevation="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_other_space"
            app:srcCompat="@mipmap/icon_dl_wx" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_zfbdl"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_75"
            android:background="@color/white"
