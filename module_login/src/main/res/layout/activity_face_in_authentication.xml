<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FaceRecognitionAuthenticationActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282b35"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_confirm"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:stv_corner="@dimen/dp_10"
            app:stv_shaderEnable="true"
            app:stv_shaderEndColor="#5698f0"
            app:stv_shaderMode="leftToRight"
            app:stv_shaderStartColor="#4a6dd5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="正在识别您的人脸信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_success" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>