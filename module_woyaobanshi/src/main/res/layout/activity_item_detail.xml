<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.activity.ItemDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_item_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_item_detail_title" />

            <com.westar.library_base.view.HorizonScrollSelfTabSegment
                android:id="@+id/hsv_item_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                app:qmui_tab_has_indicator="true"
                app:qmui_tab_indicator_height="@dimen/dp_2"
                app:qmui_tab_mode="scrollable"
                app:qmui_tab_space="@dimen/dp_15" />

            <FrameLayout
                android:id="@+id/fl_jbxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_bslct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green" />

            <FrameLayout
                android:id="@+id/fl_sqcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grgray" />

            <FrameLayout
                android:id="@+id/fl_sfbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:background="@color/orange" />

            <FrameLayout
                android:id="@+id/fl_jgyb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:background="@color/blue" />

            <FrameLayout
                android:id="@+id/fl_sdyj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:background="@color/qmui_config_color_red" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.westar.library_base.view.HorizonScrollSelfTabSegment
        android:id="@+id/hsv_item_menu_stick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/blue"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_indicator_height="@dimen/dp_2"
        app:qmui_tab_mode="scrollable"
        app:qmui_tab_space="@dimen/dp_15"
        android:visibility="gone"
        />
</RelativeLayout>