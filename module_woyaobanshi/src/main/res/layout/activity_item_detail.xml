<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_bg"
    tools:context=".ui.activity.ItemDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_item_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:paddingBottom="@dimen/dp_10"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_item_detail_title" />

            <com.westar.library_base.view.HorizonScrollSelfTabSegment
                android:id="@+id/hsv_item_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                app:qmui_tab_has_indicator="true"
                app:qmui_tab_indicator_height="@dimen/dp_2"
                app:qmui_tab_mode="scrollable"
                app:qmui_tab_space="@dimen/dp_15" />

            <FrameLayout
                android:id="@+id/fl_jbxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_bslct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_sqcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_sfbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_jgyb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/fl_sdyj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.westar.library_base.view.HorizonScrollSelfTabSegment
        android:id="@+id/hsv_item_menu_stick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:visibility="gone"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_indicator_height="@dimen/dp_2"
        app:qmui_tab_mode="scrollable"
        app:qmui_tab_space="@dimen/dp_15" />

    <LinearLayout
        android:id="@+id/ll_quick_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_item_detail_phone"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="028-6667777"
                    android:textColor="#4a6dd5"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zxsb"
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:background="@drawable/bg_item_detail_zxsb"
                android:gravity="center"
                android:text="在线申报"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>