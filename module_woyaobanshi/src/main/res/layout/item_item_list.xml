<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:id="@id/item_header_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#eff3f7" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="#303545"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.westar.library_base.view.HorizontalScrollSelfView
            android:id="@+id/hsv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:minHeight="@dimen/dp_24"
            app:layout_constraintEnd_toEndOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingbar"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:isIndicator="true"
            android:maxHeight="@dimen/dp_28"
            android:maxWidth="@dimen/dp_120"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/hsv_type"
            app:mrb_fillBackgroundStars="false"
            app:mrb_progressBackgroundTint="#b6c2d2"
            app:mrb_progressTint="#f1af2f"
            app:mrb_secondaryProgressTint="#b6c2d2" />

        <View
            android:id="@+id/space_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/ratingbar" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/civ_more_open"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="@id/ratingbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ratingbar"
            app:srcCompat="@drawable/icon_other_open" />

        <TextView
            android:id="@+id/tv_bljg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="办理机构："
            android:textColor="#828899"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/space_view" />

        <TextView
            android:id="@+id/tv_zxdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="咨询电话："
            android:textColor="#828899"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_bljg" />

        <View
            android:id="@+id/space_view1"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_zxdh" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/civ_call"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintBottom_toTopOf="@id/space_view1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space_view"
            app:srcCompat="@drawable/icon_other_bh" />

        <com.westar.library_base.view.HorizontalScrollSelfView
            android:id="@+id/hsv_function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:minHeight="@dimen/dp_45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/civ_more_close"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/space_view1" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/civ_more_close"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/civ_call"
            app:layout_constraintTop_toBottomOf="@id/space_view1"
            app:srcCompat="@drawable/icon_other_close" />

        <android.support.constraint.Group
            android:id="@+id/group_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="tv_bljg,tv_zxdh,space_view1,civ_call,hsv_function,civ_more_close" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@id/item_footer_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#eff3f7" />

</LinearLayout>