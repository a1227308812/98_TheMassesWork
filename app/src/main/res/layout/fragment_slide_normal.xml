<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/png_wd_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_user_photo"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            app:stv_corner="@dimen/dp_90"
            app:stv_drawableAsBackground="true"
            app:stv_state_drawable="@mipmap/ic_launcher"
            app:stv_stroke_color="@color/white"
            app:stv_stroke_width="@dimen/dp_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical">

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_djrz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="小贱贱"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </LinearLayout>


        <com.westar.library_base.view.HorizonScrollSelfTabSegment
            android:id="@+id/me_child_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/bg_me_child_menu"
            android:paddingEnd="@dimen/dp_24"
            android:paddingStart="@dimen/dp_24"
            app:qmui_tab_icon_position="top"
            app:qmui_tab_mode="scrollable"
            app:qmui_tab_space="@dimen/dp_18" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的证照"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_more_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="全部"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16" />

                <com.coorchice.library.SuperTextView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_12"
                    app:stv_drawableAsBackground="true"
                    app:stv_state_drawable="@drawable/icon_top_fh_bs"
                    app:stv_state_drawable_rotate="180" />
            </LinearLayout>

            <com.westar.masseswork_98.ui.custom.MeCardHorizontalScrollView
                android:id="@+id/recyc_me_cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:minHeight="@dimen/dp_80"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_more_card" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_wdsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_wd_wdsc" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

            <com.coorchice.library.SuperTextView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                app:stv_drawableAsBackground="true"
                app:stv_state_drawable="@drawable/icon_top_fh_bs"
                app:stv_state_drawable_rotate="180" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dzgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_wd_wddz" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地址管理"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

            <com.coorchice.library.SuperTextView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                app:stv_drawableAsBackground="true"
                app:stv_state_drawable="@drawable/icon_top_fh_bs"
                app:stv_state_drawable_rotate="180" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wdkd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_wd_wdkd" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的快递"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

            <com.coorchice.library.SuperTextView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                app:stv_drawableAsBackground="true"
                app:stv_state_drawable="@drawable/icon_top_fh_bs"
                app:stv_state_drawable_rotate="180" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wdzf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_wd_wdqb" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的支付"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

            <com.coorchice.library.SuperTextView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                app:stv_drawableAsBackground="true"
                app:stv_state_drawable="@drawable/icon_top_fh_bs"
                app:stv_state_drawable_rotate="180" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/ll_gdsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_wd_sz" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tcdl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_8">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_wd_tc" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>