<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ConfirmNewPhoneActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_15"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/ErrorAppearance"
            app:counterTextAppearance="@style/OverAppearance"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/EditText_hintTextAppearance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.westar.masseswork_98.ui.custom.CustomTextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:hint="*新手机号："
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_14" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/cl_phone"
        android:background="@color/white"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_15"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/ErrorAppearance"
            app:counterTextAppearance="@style/OverAppearance"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/EditText_hintTextAppearance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_yzm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_yzm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="*验证码："
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_14" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_yzm"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/selector_yzm_change_phone"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_confirm"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        app:stv_corner="@dimen/dp_10"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#5698f0"
        app:stv_shaderMode="leftToRight"
        app:stv_shaderStartColor="#4a6dd5" />

</RelativeLayout>