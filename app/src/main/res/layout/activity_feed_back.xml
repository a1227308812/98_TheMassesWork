<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FeedBackActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:text="请输入您的建议或意见："
            android:textColor="#303545"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />


        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|start"
            android:hint="请输入您的建议或者意见（不可超过1000字）"
            android:inputType="textMultiLine"
            android:maxHeight="@dimen/dp_400"
            android:maxLength="1000"
            android:minHeight="@dimen/dp_200"
            android:padding="@dimen/dp_15"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#79828e"
            android:textColorHint="#b6c2d2"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_limit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="0/1000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_content" />
    </android.support.constraint.ConstraintLayout>


    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_confirm"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:stv_corner="@dimen/dp_10"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#5698f0"
        app:stv_shaderMode="leftToRight"
        app:stv_shaderStartColor="#4a6dd5" />

</android.support.constraint.ConstraintLayout>