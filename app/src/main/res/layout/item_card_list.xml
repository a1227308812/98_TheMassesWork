<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_card_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_8">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_card_type"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_titlle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginStart="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_card_type"
        app:layout_constraintTop_toTopOf="@id/iv_card_type" />

    <TextView
        android:id="@+id/tv_describle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="@id/tv_titlle"
        app:layout_constraintStart_toStartOf="@id/tv_titlle"
        app:layout_constraintTop_toBottomOf="@id/tv_titlle" />

    <TextView
        android:id="@+id/tv_describle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_authentication_status"
        app:layout_constraintStart_toStartOf="@id/tv_describle"
        app:layout_constraintTop_toBottomOf="@id/tv_describle" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_authentication_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_describle2"
        app:layout_constraintEnd_toEndOf="@id/tv_titlle"
        app:layout_constraintStart_toEndOf="@id/tv_describle2"
        app:stv_corner="@dimen/dp_5"
        app:stv_stroke_color="@color/white"
        app:stv_stroke_width="@dimen/dp_1" />


</android.support.constraint.ConstraintLayout>