<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.westar.masseswork_98.ui.activity.SearchActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_44"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:paddingTop="@dimen/dp_16"
            android:src="@drawable/icon_other_fh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_search_bg"
            android:gravity="center_vertical"
            android:hint="请输入您想搜索的内容"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:textColor="#bdc8d7"
            android:textColorHint="#bdc8d7"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_top_ss"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etSearch"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:text="历史搜索"
            android:textColor="#303545"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_2"
            android:src="@drawable/icon_other_del" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHistoryRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_25" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f5f6f8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:text="所有热门"
        android:textColor="#303545"
        android:textSize="@dimen/text_16" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHotItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
