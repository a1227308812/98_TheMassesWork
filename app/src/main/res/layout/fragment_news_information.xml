<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.westar.library_base.view.TopBarLayout
        android:id="@id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        app:qmui_topbar_title_color="#333333"
        app:qmui_topbar_title_text_size="@dimen/text_18" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_news_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbar_layout"
        android:fadeScrollbars="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginTop="@dimen/dp_15"
                app:qmui_corner_radius="@dimen/dp_10"
                app:srcCompat="@drawable/png_banner_rdzx" />

            <com.qmuiteam.qmui.widget.QMUITabSegment
                android:id="@+id/tab_zx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                app:qmui_tab_has_indicator="true"
                app:qmui_tab_icon_position="bottom"
                app:qmui_tab_indicator_height="@dimen/dp_2"
                app:qmui_tab_mode="scrollable" />

            <android.support.v7.widget.RecyclerView
                android:id="@id/recyc_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.qmuiteam.qmui.widget.QMUITabSegment
        android:id="@+id/tab_zx_hide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/toolbar_layout"
        android:background="@color/white"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:visibility="gone"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_icon_position="bottom"
        app:qmui_tab_indicator_height="@dimen/dp_2"
        app:qmui_tab_mode="scrollable" />

</RelativeLayout>