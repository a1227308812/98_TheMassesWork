<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.GlobalSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_18"
                android:paddingStart="@dimen/dp_18"
                android:paddingTop="@dimen/dp_16"
                android:src="@drawable/icon_other_fh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_70"
                android:background="@drawable/shape_search_bg"
                android:completionHint="请输入您想搜索的内容"
                android:completionThreshold="1"
                android:dropDownHeight="@dimen/dp_220"
                android:dropDownSelector="@color/qmui_config_color_gray_7"
                android:dropDownVerticalOffset="@dimen/dp_4"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="#bdc8d7"
                android:textColorHint="#bdc8d7"
                android:textSize="@dimen/text_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--<requestFocus />-->
            </android.support.v7.widget.AppCompatAutoCompleteTextView>


            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/icon_top_ss"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/etSearch"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="历史搜索"
                    android:textColor="#303545"
                    android:textSize="@dimen/text_16" />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_3"
                    android:paddingTop="@dimen/dp_2"
                    android:src="@drawable/icon_other_del" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvHistoryRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#f5f6f8" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:text="所有热门"
            android:textColor="#303545"
            android:textSize="@dimen/text_16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHotItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
