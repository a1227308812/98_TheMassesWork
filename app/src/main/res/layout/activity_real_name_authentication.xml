<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RealNameAuthenticationActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/png_smrz_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.westar.library_base.view.TopBarLayout
        android:id="@+id/topbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:qmui_topbar_bg_color="@color/transparent" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_340"
        android:layout_marginTop="@dimen/dp_190"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_18"
            android:paddingStart="@dimen/dp_18"
            android:paddingTop="@dimen/dp_30"
            android:text="实名认证是平台提供的一项身份识别服务，通过这项认证，您就相当于拥有了一张网络身份证明，增加您的信任度和平台服务的便利性。"
            android:textColor="#0c183e"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/authenticate_now"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="立即认证"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:stv_corner="@dimen/dp_10"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#5698f0"
        app:stv_shaderMode="leftToRight"
        app:stv_shaderStartColor="#4a6dd5" />

</android.support.constraint.ConstraintLayout>