<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PersonalInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="更改头像"
                android:textColor="#828899"
                android:textSize="@dimen/text_14" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/iv_change_photo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                app:stv_corner="@dimen/dp_30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_alignParentBottom="true"
                android:background="@color/color_divider" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/dp_60"
            android:paddingStart="@dimen/dp_15">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                app:counterEnabled="false"
                app:counterMaxLength="10"
                app:counterOverflowTextAppearance="@style/ErrorAppearance"
                app:counterTextAppearance="@style/OverAppearance"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/EditText_hintTextAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icc_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.westar.masseswork_98.ui.custom.CustomTextInputEditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="昵称"
                    android:textColor="#303545"
                    android:textColorHint="#b6c2d2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icc_nickname"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icc_right_background" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:minHeight="@dimen/dp_60"
            android:paddingStart="@dimen/dp_15">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                app:counterEnabled="false"
                app:counterOverflowTextAppearance="@style/ErrorAppearance"
                app:counterTextAppearance="@style/OverAppearance"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/EditText_hintTextAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icc_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.westar.masseswork_98.ui.custom.CustomTextInputEditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="所在地"
                    android:textColor="#303545"
                    android:textColorHint="#b6c2d2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icc_location"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icc_right_background" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/dp_60"
            android:paddingStart="@dimen/dp_15">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                app:counterOverflowTextAppearance="@style/ErrorAppearance"
                app:counterTextAppearance="@style/OverAppearance"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/EditText_hintTextAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icc_gender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <com.westar.masseswork_98.ui.custom.CustomTextInputEditText
                    android:id="@+id/et_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="性别"
                    android:textColor="#303545"
                    android:textColorHint="#b6c2d2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icc_gender"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icc_right_background" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/dp_60"
            android:paddingStart="@dimen/dp_15">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                app:counterOverflowTextAppearance="@style/ErrorAppearance"
                app:counterTextAppearance="@style/OverAppearance"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/EditText_hintTextAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icc_birthday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.westar.masseswork_98.ui.custom.CustomTextInputEditText
                    android:id="@+id/et_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="生日"
                    android:textColor="#303545"
                    android:textColorHint="#b6c2d2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icc_birthday"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icc_right_background" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_confirm"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_190"
            android:gravity="center"
            android:text="更新"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idconfirm_protocol"
            app:stv_corner="@dimen/dp_10"
            app:stv_shaderEnable="true"
            app:stv_shaderEndColor="#5698f0"
            app:stv_shaderMode="leftToRight"
            app:stv_shaderStartColor="#4a6dd5" />
    </LinearLayout>
</ScrollView>