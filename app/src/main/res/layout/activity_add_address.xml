<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.activity.AddAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:hintTextAppearance="@style/EditText_hintTextAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_sjr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="*收件人"
                android:inputType="textMultiLine"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textSize="@dimen/text_14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:hintTextAppearance="@style/EditText_hintTextAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_sjhm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="*手机号码"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textSize="@dimen/text_14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_szdq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:hintTextAppearance="@style/EditText_hintTextAppearance">

            <com.westar.library_base.view.CustomTextInputEditText
                android:id="@+id/et_szdq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="*所在地区"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textSize="@dimen/text_14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:hintTextAppearance="@style/EditText_hintTextAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_xxjd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="*详细街道"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textSize="@dimen/text_14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:hintTextAppearance="@style/EditText_hintTextAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_yzbm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="*邮政编码"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:textColor="#303545"
                android:textColorHint="#b6c2d2"
                android:textSize="@dimen/text_14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <android.support.v7.widget.AppCompatCheckedTextView
            android:id="@+id/ct_szmr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_45"
            android:text="设置为默认地址："
            android:textColor="#303545"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/complete"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:stv_corner="@dimen/dp_10"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#5698f0"
        app:stv_shaderMode="leftToRight"
        app:stv_shaderStartColor="#4a6dd5" />


</android.support.constraint.ConstraintLayout>