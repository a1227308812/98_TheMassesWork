<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <com.coorchice.library.SuperTextView
        android:id="@+id/iv_news_photo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_corner="@dimen/dp_4" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#303545"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_news_photo"
        app:layout_constraintTop_toTopOf="@id/iv_news_photo" />

    <TextView
        android:id="@+id/dep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:text=""
        android:textColor="#828899"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="@id/iv_news_photo"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/news_title" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#b6c2d2"
        android:textSize="@dimen/text_12"
        app:layout_constraintBottom_toBottomOf="@id/dep"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/news_title" />
</android.support.constraint.ConstraintLayout>