<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".BanJianChaXunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_md_et"
            android:paddingTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*身份证/手机号码/办件编号"
                android:textColor="@color/color_text_input"
                android:textColorHint="@color/color_et_tip"
                android:textCursorDrawable="@drawable/et_cursor_drawable"
                android:textSize="@dimen/text_14"
                android:theme="@style/TextAppTheme" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/divider"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@color/white"
            >
        <TextView
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_gradient_shadow_conner_10"
            android:gravity="center"
            android:minHeight="@dimen/dp_50"
            android:text="查询"
            android:textColor="@color/color_search_white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end"
            android:text="我的办件"
            android:textColor="#4a6dd5"
            android:textSize="14sp"/>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:paddingTop="10dp"
            android:background="#f7f7fa"
            />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>